{
  "routes": [
    {
      "method": "GET",
      "path": "/publications",
      "handler": "publications.find",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/publications/count",
      "handler": "publications.count",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/publications/:id",
      "handler": "publications.findOne",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/publications",
      "handler": "publications.create",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "PUT",
      "path": "/publications/:id",
      "handler": "publications.update",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "DELETE",
      "path": "/publications/:id",
      "handler": "publications.delete",
      "config": {
        "policies": ["global::permissions"]
      }
    }
  ]
}
